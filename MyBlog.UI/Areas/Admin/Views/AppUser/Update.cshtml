
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}


@model MyBlog.UI.Areas.Admin.Models.DTO.AppUserDTO
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/Index"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/AppUser/List">User List</a></li>
        <li class="active">Update User</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Update User</h3>
                </div>
                <form action="/Admin/AppUser/Update" method="post" role="form" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="FirstName">First Name</label>
                            <input type="text" name="FirstName" value="@Model.FirstName" class="form-control" placeholder="First Name">
                        </div>
                        <div class="form-group">
                            <label for="LastName">Last Name</label>
                            <input type="text" name="LastName" value="@Model.LastName" class="form-control" placeholder="Last Name">
                        </div>
                        <div class="form-group">
                            <label for="UserName">User Name</label>
                            <input type="text" name="UserName" value="@Model.UserName" class="form-control" placeholder="User Name">
                        </div>
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input type="email" name="Email" value="@Model.Email" id="exampleInputEmail1" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="Password">Password</label>
                            <input type="password" name="Password" value="@Model.Password" id="exampleInputPassword1" class="form-control" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label for="Role">Role</label>
                            <select name="Role" value="@Model.Role" class="form-control">
                                @foreach (var item in Enum.GetNames(typeof(MyBlog.DAL.ORM.Enum.Role)))
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>

                            <div class="form-group">
                                <label for="Gender">Gender</label>
                                <select name="Gender" value="@Model.Gender" class="form-control">
                                    @foreach (var item in Enum.GetNames(typeof(MyBlog.DAL.ORM.Enum.Gender)))
                                    {
                                        <option value="@item">@item</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <input type="text" style="visibility:hidden" name="ID" value="@Model.ID" />
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


